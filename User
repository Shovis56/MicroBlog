package Microblog2;


public class User {

    //users
    private String fullName;
    private String userName;
    private String webAddress;
    private String emailAddress;
    private int orderOfUsers;
    private int userNumber;


//    private ArrayList posts = new ArrayList();


    static int counter = 1;
    static int userCounter= 0;


    public User(String fullName, String userName, String webAddress, String emailAddress) {

        this.fullName = fullName;
        this.userName = userName;
        this.webAddress = webAddress;
        this.emailAddress = emailAddress;
        this.userNumber = userCounter;
        this.orderOfUsers = counter;
        counter++;
        userCounter++;

    }


    public String pickUserName(){
        return (userNumber+ ") "+ userName);
    }


    public String getUserName() {
        return userName;
    }


    }



